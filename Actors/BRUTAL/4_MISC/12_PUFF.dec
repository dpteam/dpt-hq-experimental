	ALPHA 1.0
	+NOBLOCKMAP
	+NOGRAVITY
	+CLIENTSIDEONLY
	+BLOODLESSIMPACT 
	+FORCEXYBILLBOARD
	OBITUARY "%O ATE BULLET SHRAPNEL."
	DAMAGETYPE "SHRAPNEL"
	SCALE 0.09
	SPEED 0
	STATES
	{
SPAWN:
		TNT1 A 0 A_SPAWNITEM ("YELLOWFLARESMALL", 0)
		TNT1 A 0 A_SPAWNITEMEX ("DETECTFLOORBULLET",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION,0)
